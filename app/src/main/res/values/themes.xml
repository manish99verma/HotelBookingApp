<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HotelBookingApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HotelBookingApp" parent="Base.Theme.HotelBookingApp">
        <item name="colorPrimary">@color/surface_color_1</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.DefaultSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/hotel_app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.HotelBookingApp</item>
    </style>

    <style name="text_welcome_title" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_welcome_caption" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/nunito</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="default_btn_text" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_body" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_button" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="small_caption" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="text_title" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="txt_profile_title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="txt_profile_sub_title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="text_otp" parent="text_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_navigation_title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="txt_navigation_title_selected" parent="txt_navigation_title">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="button_text_roboto" parent="ThemeOverlay.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        android:fontFamily="@font/roboto_medium"
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@color/surface_color_1</item>
    </style>

    <style name="text_input_layout_main" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

</resources>